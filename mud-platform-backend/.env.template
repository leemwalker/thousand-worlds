# Thousand Worlds - Environment Configuration Template
# Copy this file to .env and fill in the values

# === REQUIRED SECRETS ===
# These MUST be set for the application to start

# JWT Secret - Generate with: openssl rand -hex 32
JWT_SECRET=

# Database Password - Generate with: openssl rand -hex 16
POSTGRES_PASSWORD=

# MongoDB Password - Generate with: openssl rand -hex 16
MONGO_PASSWORD=

# === DATABASE CONFIGURATION ===
POSTGRES_USER=admin
POSTGRES_DB=mud_core
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:5432/${POSTGRES_DB}?sslmode=disable

# === REDIS CONFIGURATION ===
REDIS_ADDR=localhost:6379

# === NATS CONFIGURATION ===
NATS_URL=nats://localhost:4222

# === MONGODB CONFIGURATION ===
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_USER=admin
MONGO_URL=mongodb://${MONGO_USER}:${MONGO_PASSWORD}@${MONGO_HOST}:${MONGO_PORT}

# === OLLAMA CONFIGURATION ===
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b

# === SERVER CONFIGURATION ===
PORT=8080
BACKEND_PORT=8080
FRONTEND_PORT=5173

# === CORS CONFIGURATION ===
# TODO_SECURITY: Update this when you have a production domain
# Format: comma-separated list of origins (no spaces)
# Example: https://example.com,https://www.example.com
# For development, use: http://localhost:5173,http://192.168.0.0/16
CORS_ALLOWED_ORIGINS=http://localhost:5173

# === LOGGING ===
LOG_LEVEL=info
LOG_FILE=server.log

# === SECURITY ===
# Enable HTTPS redirect in production
ENABLE_HTTPS_REDIRECT=false

# Session expiration (in hours)
SESSION_EXPIRATION_HOURS=24
